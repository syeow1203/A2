{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 600,
    "title": "CPI vs Unemployment Rate",
    "data": {
      "url": "https://raw.githubusercontent.com/syeow1203/A2/main/bubble_chart/data/GDP.csv"
    },

    "params": [
        {
            "name": "rate",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 80,
                "step": 10,
                "name": "Min Life Expectancy: "
            }
        }
    ],

    "transform": [
        {"filter": "datum.Life_Expectancy > rate"}
    ],
        "encoding": {
            "x": {
                "field": "GDP",
                "type": "quantitative",
                "title": "Life Expectancy",
                "scale": {"domain": [4000000000, 200000000000000]}
            },
            "y": {
                "field": "CPI",
                "type": "quantitative",
                "scale": {"domain": [0, 3000]}
            }
        },

        "layer": [
        {
            "mark":"circle",
            "encoding": {
                "color":{
                    "field": "Life_Expectancy",
                    "type": "quantitative",
                    "scale": {
                        "domain": [50, 85]
                    }
                },

                "opacity": {"value": 1},
                "size":{"value": 100},
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Life_Expectancy", "type": "quantitative", "title": "Life Expectancy"},
                    {"field": "CPI", "type": "quantitative"}
                ]
            }
        }
    ]
}