{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1200,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/syeow1203/A2/main/bubble_chart/data/GDP.csv"
    },

    "params": [
        {
            "name": "rate",
            "value": 10,
            "bind": {
                "input": "range",
                "min": 50,
                "max": 80,
                "step": 5,
                "name": "Min Expectancy: "
            }
        },

        {
            "name": "continent",
            "bind": {
                "input": "select",
                "options": [
                    "Asia",
                    "Africa",
                    "Europe",
                    "North America",
                    "South America",
                    "Oceania",
                    null
                ],

                "labels": [
                    "Asia",
                    "Africa",
                    "Europe",
                    "North America",
                    "South America",
                    "Oceania",
                    "Worldwide"
                ],

                "name": "Selection: "
            }

        }
    ],

    "transform": [
        {
            "filter": "datum.Life_Expectancy > rate"
        },

        {
            "filter": "continent == null || datum.Continent == continent"
        }
    ],

    "encoding": {
        "x": {
            "field": "Life_Expectancy",
            "type": "quantitative",
            "scale": {
                "domain": [50, 85]
            }
        },

        "y": {
            "field": "GDP",
            "type": "quantitative",
            "axis": {
                "tickCount": 5
            },

            "scale": {
                "type": "log",
                "domain": [4000000000, 22000000000000]
            }

        }
    },

    

    "config": {}
}