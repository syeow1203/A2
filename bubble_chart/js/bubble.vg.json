{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1250,
    "height": 600,
    "title": "CPI vs Unemployment Rate",
    "data": {
      "url": "https://raw.githubusercontent.com/syeow1203/A2/main/bubble_chart/data/GDP.csv"
    },

    "params": [
        {
            "name": "rate",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 0.2,
                "step": 0.01,
                "name": "Min Unemployment Rate: "
            }
        }
    ],

    "transform": [
        {"filter": "datum.Unemployment_Rate > rate"}
    ],
        "encoding": {
            "x": {
                "field": "Unemployment_Rate",
                "type": "quantitative",
                "title": "Unemployment Rate",
                "scale": {"domain": [0, 0.3]}
            },
            "y": {
                "field": "CPI",
                "type": "quantitative",
                "scale": {"domain": [0, 3000]}
            }
        },

        "layer": [
        {
            "mark":"circle",
            "encoding": {
                "color":{
                    "field": "Unemployment_Rate",
                    "type": "quantitative",
                    "scale": {
                        "domain": [0, 0.3]
                    }
                },

                "opacity": {"value": 1},
                "size":{"value": 100},
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Unemployment_Rate", "type": "quantitative", "title": "Unemployment_Rate"},
                    {"field": "CPI", "type": "quantitative"}
                ]
            }
        }
    ]
}