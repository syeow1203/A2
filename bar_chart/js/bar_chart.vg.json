{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1250,
    "height": 400,
    "title": "Top 10 Highest & Lowest Consumer Price Index Countries",
    "data": {
        "url": "https://raw.githubusercontent.com/syeow1203/A2/main/bar_chart/js/CPI.json"
    },

    "transform": [
        {
            "joinaggregate": [
                {
                    "op": "mean",
                    "field": "Mean_CPI",
                    "as": "AverageCPI"
                }
            ]
        }
    ],

    "encoding": {
        "x": {
            "field": "CPI", "type": "quantitative", "title": "CPI"
        },

        "y": {
            "field": "Country", "type": "nominal",
            "sort": ["Brunei",
                "Switzerland",
                "Maldives",
                "Greece",
                "Cyprus",
                "Comoros",
                "Japan",
                "Zimbabwe",
                "Belize",
                "Burkina Faso",
                "Guinea",
                "Nigeria",
                "Ghana",
                "Ukraine",
                "Egypt",
                "Suriname",
                "Malawi",
                "Iran",
                "Sudan",
                "Venezuela"
                
                ]
        }
    },

    "layer": [
        {
            "mark": {
                "type": "bar", "cornerRadiusEnd": 5
            },

            "encoding": {
                "color": {
                    "condition": {
                        "test": "datum['CPI'] >= datum.Mean_CPI", "value": "#c03636"
                    },

                    "value": "#3654c0"
                }
            }
        },

        {
            "mark": {
                "type": "text",
                "align": "right",
                "xOffset": -2,
                "fontSize": 10
            },

            "encoding": {
                "text": {
                    "field": "CPI", "type": "quantitative", "format": ".2f"
                },

                "color": {
                    "value": "white"
                }
            }
        }
    ]
}