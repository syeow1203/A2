{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1250,
    "height": 400,
    "title": "Top 10 Highest & Lowest Consumer Price Index Countries",
    "background": "aliceblue",
    "data": {
        "url": "https://raw.githubusercontent.com/syeow1203/A2/main/bar_chart/js/CPI.json"
    },

    "transform": [
        {
            "joinaggregate": [
                {
                    "op": "mean",
                    "field": "Mean_BirthRate",
                    "as": "AverageBR"
                }
            ]
        }
    ],

    "encoding": {
        "x": {
            "field": "Birth_Rate", "type": "quantitative", "title": "Birth Rate"
        },

        "y": {
            "field": "Country", "type": "nominal",
            "sort": ["Niger",
                "Chad",
                "Mali",
                "Dem. Rep. Congo",
                "Angola",
                "Burundi",
                "The Gambia",
                "Uganda",
                "Burkina Faso",
                "Nigeria",
                "Bulgaria",
                "Singapore",
                "Ukraine",
                "Finland",
                "Portugal",
                "Greece",
                "Spain",
                "Japan",
                "Italy",
                "South Korea"
                
            ]
        }
    },

    "layer": [
        {
            "mark": {
                "type": "text",
                "baseline": "middle",
                "dx": -300,
                "dy": -80,
                "fontSize": 15,
                "fontWeight": "italic"
            },

            "encoding": {
                "text": {
                    "value": [
                        "In year 2023, Venezuela has the highest Consumer Price Index (CPI)",
                        "while Brunei is having the lowest Consumer Price Index (CPI)."
                        
                    ]
                },
                "opacity": {
                    "condition": {
                        "test": "datum['Country'] == 'Niger'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },

        {
            "mark": {
                "type": "bar"
            },

            "encoding": {
                "color": {
                    "condition": {
                        "test": "datum['Birth_Rate'] >= datum.Mean_BirthRate", "value": "#c03636"
                    },

                    "value": "#3654c0"
                }
            }
        },

        {
            "mark": {
                "type": "text",
                "align": "right",
                "xOffset": -5,
                "fontSize": 10
            },

            "encoding": {
                "text": {
                    "field": "Birth_Rate", "type": "quantitative", "format": ".2f"
                },

                "color": {
                    "value": "white"
                }
            }
        }
    ]
}